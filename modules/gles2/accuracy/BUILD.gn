# deqp-gles2-accuracy build

import("//build/ohos.gni")
import("//third_party/VK-GL-CTS/vk_gl_cts.gni")

config("deqp-gles2-accuracy_config") {
  cflags_cc = deqp_common_cflags_cc
  defines = deqp_common_defines
}

ohos_source_set("deqp-gles2-accuracy_source") {
  sources = [
    "//third_party/VK-GL-CTS/modules/gles2/accuracy/es2aAccuracyTests.cpp",
    "//third_party/VK-GL-CTS/modules/gles2/accuracy/es2aAccuracyTests.hpp",
    "//third_party/VK-GL-CTS/modules/gles2/accuracy/es2aTextureFilteringTests.cpp",
    "//third_party/VK-GL-CTS/modules/gles2/accuracy/es2aTextureFilteringTests.hpp",
    "//third_party/VK-GL-CTS/modules/gles2/accuracy/es2aTextureMipmapTests.cpp",
    "//third_party/VK-GL-CTS/modules/gles2/accuracy/es2aTextureMipmapTests.hpp",
    "//third_party/VK-GL-CTS/modules/gles2/accuracy/es2aVaryingInterpolationTests.cpp",
    "//third_party/VK-GL-CTS/modules/gles2/accuracy/es2aVaryingInterpolationTests.hpp",

  ]
  include_dirs = [
    "//third_party/VK-GL-CTS/modules/glshared",
    "//third_party/VK-GL-CTS/modules/gles2/accuracy",
    "//third_party/VK-GL-CTS/modules/gles2",
  ]
  
  include_dirs += deqp_common_include_dirs

  deps = [
    "//third_party/VK-GL-CTS/framework/common:libdeqp_tcutil",
    "//third_party/VK-GL-CTS/framework/opengl:libdeqp_glutil",
    "//third_party/VK-GL-CTS/modules/glshared:libdeqp-gl-shared",
  ]

  configs = [ ":deqp-gles2-accuracy_config" ]

}

ohos_static_library("libdeqp-gles2-accuracy") {
  deps = [ ":deqp-gles2-accuracy_source" ]
  part_name = "graphic_standard"
  subsystem_name = "graphic"
}
