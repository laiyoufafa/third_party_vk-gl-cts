action("gen_ext_deps") {
    script = "//third_party/vk-gl-cts/external/vulkancts/scripts/ohos_gen_ext_deps.py"
    outputs = [
        "$target_out_dir/gen_ext_deps.log",
    ]

    out_path = rebase_path("//third_party/vk-gl-cts/build/external/vulkancts/framework/vulkan")
    args = [
        "$out_path",
    ]
}

action("gen_framework") {
    script = "//third_party/vk-gl-cts/external/vulkancts/scripts/ohos_gen_framework.py"
    outputs = [
        "$target_out_dir/gen_framework.log",
    ]

    out_path = rebase_path("//third_party/vk-gl-cts/build/external/vulkancts/framework/vulkan")
    args = [
        "$out_path",
    ]
    deps = [
      ":gen_ext_deps"
    ]
}

action("gen_framework_c") {
